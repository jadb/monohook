{
    "name": "jadb/monohook"
    , "description": "Fully configurable and extendable VCS hook manager"
    , "keywords": [
        "git", "hook"
        , "codesniffer", "phpcs"
        , "phpunit"
    ]
    , "homepage": "http://github.com/jadb/monohook"
    , "type": "library"
    , "license": "MIT"
    , "authors": [
        {
            "name": "Jad Bitar"
            , "email": "jadbitar@mac.com"
            , "homepage": "http://jadb.io"
        }
    ]
    , "require": {
        "php": ">=5.3.0"
    }
    , "require-dev": {
        "phpunit/phpunit": "~4.0"
    }
    , "autoload": {
        "psr-4": {
            "Monohook\\": "src"
        }
    }
    , "autoload-dev": {
        "psr-4": {
            "Monohook\\Test\\": "tests"
        }
    }
    , "bin": ["monohook"]
    , "scripts": {
        "post-install-cmd": "bash monohook install"
    }
}
